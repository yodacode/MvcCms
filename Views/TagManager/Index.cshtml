@model IEnumerable<MvcCms.Models.Tag>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
}

<div class="container">
    <div class="page-header">
        <h2>Liste des Articles</h2>
       <div class="section"> @Html.ActionLink("Ajouter une catégories", "Create", null,  new { @class="btn pull-right btn-primary section" }) </div>
    </div>


    <table class="table table-striped" span="3">
            <tr>
            <th>Nom</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Modifier", "Edit", new { id=item.TagId },new { @class = "btn btn-mini" })
                    @Html.ActionLink("Supprimer", "Delete", new { id=item.TagId },new { @class = "btn btn-mini" })
                </td>
            </tr>
        }
    </table>

</div>